<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="ee.app.conversa">

    <uses-feature android:name="android.hardware.camera2.full" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" tools:node="remove">
    </uses-permission>
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />

    <uses-feature android:glEsVersion="0x00020000"
        android:required="true"/>

    <!-- [START gcm_permission] -->
    <!-- App receives GCM messages. -->
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <!-- Keeps the processor from sleeping when a message is received. -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <permission
        android:name="ee.app.conversa.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />
    <!-- Prevent other Android applications from registering and receiving the Android application's messages -->
    <uses-permission android:name="ee.app.conversa.permission.C2D_MESSAGE" />
    <!-- [END gcm_permission] -->

    <application android:name="ee.app.conversa.ConversaApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <activity android:name=".extendables.BaseActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ActivitySplashScreen"
            android:screenOrientation="portrait"
            android:noHistory="true"/>

        <activity-alias
            android:name=".Launcher"
            android:noHistory="true"
            android:targetActivity=".ActivitySplashScreen"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity-alias>

        <activity
            android:name="ee.app.conversa.ActivityMain"
            android:screenOrientation="portrait"
            android:launchMode="singleTask">
            <intent-filter>
                <data android:scheme="conversaapp" android:host="open" />
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
            </intent-filter>
            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="https" android:host="conversa.link" android:pathPrefix="/IT8k" />
            </intent-filter>
        </activity>

        <activity android:name="ee.app.conversa.ActivityTutorial"
            android:theme="@style/TutorialTheme"
            android:screenOrientation="portrait"
            android:launchMode="singleTop"
            android:noHistory="true" />

        <activity
            android:name="ee.app.conversa.ActivitySignIn"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden"
            android:launchMode="singleTask" />

        <activity
            android:name="ee.app.conversa.ActivityLogIn"
            android:windowSoftInputMode="stateHidden|adjustResize"
            android:screenOrientation="portrait"
            android:launchMode="singleTop" />

        <activity
            android:name="ee.app.conversa.ActivitySignUp"
            android:windowSoftInputMode="stateHidden|adjustResize"
            android:screenOrientation="portrait"
            android:launchMode="singleTop" />

        <activity
            android:name="ee.app.conversa.ActivityForgotPassword"
            android:windowSoftInputMode="stateHidden|adjustResize"
            android:screenOrientation="portrait"
            android:launchMode="singleTop" />

        <activity android:name="ee.app.conversa.ActivityBusiness"
            android:screenOrientation="portrait"
            android:launchMode="singleTop" />

        <activity android:name="ee.app.conversa.ActivitySearch"
            android:theme="@style/SearchTheme"
            android:screenOrientation="portrait"
            android:launchMode="singleTop" />

        <activity android:name="ee.app.conversa.ActivityProfile"
            android:theme="@style/Theme.AppCompat.Translucent"
            android:screenOrientation="portrait"
            android:launchMode="singleTop" />

        <activity
            android:name="ee.app.conversa.ActivityChatWall"
            android:theme="@style/ChatWallTheme"
            android:screenOrientation="portrait"
            android:launchMode="singleTop"
            android:windowSoftInputMode="stateHidden|adjustResize"
            android:parentActivityName="ee.app.conversa.ActivityMain"/>

        <activity
            android:name="ee.app.conversa.ActivityImageDetail"
            android:screenOrientation="portrait"
            android:launchMode="singleTop"
            android:parentActivityName="ee.app.conversa.ActivityChatWall" />

        <activity
            android:name="ee.app.conversa.ActivityLocation"
            android:screenOrientation="portrait"
            android:launchMode="singleTop" />

        <activity
            android:name="ee.app.conversa.settings.ActivitySettingsAccount"
            android:screenOrientation="portrait"
            android:launchMode="singleTop"
            android:parentActivityName="ee.app.conversa.ActivityMain" />

        <activity
            android:name="ee.app.conversa.settings.ActivitySettingsChat"
            android:screenOrientation="portrait"
            android:launchMode="singleTop"
            android:parentActivityName="ee.app.conversa.ActivityMain" />

        <activity
            android:name="ee.app.conversa.settings.ActivitySettingsNotifications"
            android:screenOrientation="portrait"
            android:launchMode="singleTop"
            android:parentActivityName="ee.app.conversa.ActivityMain" />

        <activity
            android:name="ee.app.conversa.settings.ActivitySettingsHelp"
            android:screenOrientation="portrait"
            android:launchMode="singleTop"
            android:parentActivityName="ee.app.conversa.ActivityMain" />

        <activity android:name=".notifications.NotificationPressed"
            android:noHistory="true"
            android:launchMode="singleTask"
            android:taskAffinity=""
            android:excludeFromRecents="true" />

        <activity
            android:name="ee.app.conversa.browser.WebViewActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleTop" />

        <!-- **************************************************************************************** -->
        <receiver android:name=".management.ConnectionChangeReceiver">
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
                <action android:name="android.net.ConnectivityManager.CONNECTIVITY_ACTION" />
            </intent-filter>
        </receiver>
        <!-- **************************************************************************************** -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyDKUt70K0N8Io4DKmyn54Ym-tWkIEVEhpY" />

        <!-- Add this meta-data below, and change "key_live_xxxxxxx" to your actual live Branch key -->
        <meta-data
            android:name="io.branch.sdk.BranchKey"
            android:value="key_live_jojZlVD6NzEDS0I8yINt5fmpxsb6Jdms" />
        <!-- For your test app, if you have one; Again, use your actual test Branch key -->
        <meta-data
            android:name="io.branch.sdk.BranchKey.test"
            android:value="key_test_jlh0fVE5OwrAI8P2yVGwRagmttb6Hahk" />

        <receiver android:name="io.branch.referral.InstallListener" android:exported="true">
            <intent-filter>
                <action android:name="com.android.vending.INSTALL_REFERRER" />
            </intent-filter>
        </receiver>

        <service
            android:name=".contact.ContactIntentService"
            android:exported="false" />
        <service
            android:name=".messaging.MessageIntentService"
            android:exported="false" />
        <service
            android:name=".messaging.CustomMessageService"
            android:exported="false" />
    </application>
</manifest>