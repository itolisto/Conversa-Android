                    <!--<data android:scheme="conversapp" android:host="user" />-->
                    <!--<action android:name="android.intent.action.VIEW" />-->
                    <!--<category android:name="android.intent.category.DEFAULT" />-->
                    <!--<category android:name="android.intent.category.BROWSABLE" />-->
                <!--</intent-filter>-->
        <!--</activity>-->

        <activity
            android:name=".ActivitySplashScreen"
            android:screenOrientation="portrait"
            android:noHistory="true"/>

        <activity-alias
            android:name=".Launcher"
            android:noHistory="true"
            android:targetActivity=".ActivitySplashScreen"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <data android:scheme="conversapp" android:host="user" />
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
            </intent-filter>
        </activity-alias>

        <!-- enable the search dialog to send searches to MainActivity -->
        <meta-data
            android:name="android.app.default_searchable"
            android:value="ee.app.conversa.MainActivity" />

        <activity
            android:name="ee.app.conversa.ActivityMain"
            android:screenOrientation="portrait"
            android:launchMode="singleTask" />

        <activity
            android:name="ee.app.conversa.ActivitySignIn"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden"
            android:launchMode="singleTask" />

        <activity
            android:name="ee.app.conversa.ActivityLogIn"
            android:windowSoftInputMode="adjustResize"
            android:screenOrientation="portrait"
            android:launchMode="singleTask" />

        <activity
            android:name="ee.app.conversa.ActivitySignUp"
            android:windowSoftInputMode="adjustResize"
            android:screenOrientation="portrait"
            android:launchMode="singleTask" />

        <activity
            android:name="ee.app.conversa.ActivityForgotPassword"
            android:screenOrientation="portrait"
            android:launchMode="singleTask" />

        <activity android:name="ee.app.conversa.ActivitySearch"
            android:screenOrientation="portrait"
            android:launchMode="singleTask" >
            <intent-filter>
                <action android:name="android.intent.action.SEARCH"/>
            </intent-filter>
        </activity>

        <activity android:name="ee.app.conversa.ActivityProfile"
            android:screenOrientation="portrait"
            android:launchMode="singleTask" />

        <activity
            android:name="ee.app.conversa.ActivityChatWall"
            android:screenOrientation="portrait"
            android:launchMode="singleTask" />

        <activity
            android:name="ee.app.conversa.ActivityLocation"
            android:screenOrientation="portrait"
            android:launchMode="singleTask" />

        <activity
            android:name="ee.app.conversa.ActivityCameraCrop"
            android:screenOrientation="portrait"
            android:launchMode="singleTask" />

        <activity android:name=".notifications.NotificationPressed"
            android:launchMode="singleTask"
            android:taskAffinity=""
            android:excludeFromRecents="true" />

        <activity android:name=".settings.ActivityAccountSettings"
            android:screenOrientation="portrait"
            android:launchMode="singleTask" />
        <activity android:name=".settings.ActivityChatSettings"
            android:screenOrientation="portrait"
            android:launchMode="singleTask" />
        <activity android:name=".settings.ActivityNotificationSettings"
            android:screenOrientation="portrait"
            android:launchMode="singleTask" />
        <activity android:name=".settings.ActivitySupportSettings"
            android:screenOrientation="portrait"
            android:launchMode="singleTask" />
        <!-- **************************************************************************************** -->
        <receiver android:name=".management.ConnectionChangeReceiver">
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
                <action android:name="android.net.ConnectivityManager.CONNECTIVITY_ACTION" />
            </intent-filter>
        </receiver>
        <!-- **************************************************************************************** -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyAwg-G3VTF0jS_dyyTcfdZ6pDA2UK9rgYQ" />

        <!-- Receive data in the background with or without displaying a notification. -->
        <service
            android:name=".notifications.onesignal.CustomNotificationExtenderService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.onesignal.NotificationExtender" />
            </intent-filter>
        </service>
        <!-- By default OneSignal will open or resume your launcher Activity when a notification is
            tapped on. You can disable this behavior by adding the meta-data tag -->
        <meta-data android:name="com.onesignal.NotificationOpened.DEFAULT" android:value="DISABLE" />

        <service
            android:name=".management.contact.ContactIntentService"
            android:exported="false" />
        <service
            android:name=".management.message.MessageIntentService"
            android:exported="false" />
        <service
            android:name=".management.message.CustomMessageService"
            android:exported="false" />
    </application>
</manifest>