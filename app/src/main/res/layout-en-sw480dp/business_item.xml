<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:clipToPadding="false" >

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sdvBusinessImage"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        fresco:fadeDuration="300"
        fresco:actualImageScaleType="centerInside"
        fresco:placeholderImage="@drawable/business_default"
        fresco:placeholderImageScaleType="centerInside"
        fresco:failureImage="@drawable/business_default"
        fresco:failureImageScaleType="centerInside"
        fresco:retryImage="@drawable/business_default"
        fresco:retryImageScaleType="centerInside"
        fresco:progressBarImage="@drawable/rotate_loading"
        fresco:progressBarImageScaleType="centerInside"
        fresco:progressBarAutoRotateInterval="1000"
        fresco:roundAsCircle="true" />

    <RelativeLayout
        android:layout_alignTop="@id/sdvBusinessImage"
        android:layout_alignBottom="@id/sdvBusinessImage"
        android:layout_toEndOf="@id/sdvBusinessImage"
        android:layout_toRightOf="@id/sdvBusinessImage"
        android:paddingLeft="7dp"
        android:paddingStart="7dp"
        android:paddingRight="16dp"
        android:paddingEnd="16dp"
        android:layout_height="match_parent"
        android:layout_width="match_parent" >

        <View
            android:id="@+id/vDivider"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <ee.app.conversa.view.MediumTextView
            android:id="@+id/mtvDisplayName"
            android:text="@string/test_string"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/vDivider"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/default_black"
            android:textSize="18sp" />

        <ee.app.conversa.view.LightTextView
            android:id="@+id/ltvConversaId"
            android:text="@string/test_string"
            android:layout_below="@id/vDivider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/default_black"
            android:textSize="14sp"
            android:maxLines="1"
            android:ellipsize="end" />
    </RelativeLayout>
</RelativeLayout>