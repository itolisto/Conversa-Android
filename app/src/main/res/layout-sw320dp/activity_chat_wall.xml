<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_chat"
    tools:context=".ActivityChatWall" >

    <RelativeLayout
        android:layout_marginTop="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <RelativeLayout
            android:id="@+id/llTextOptions"
            android:paddingLeft="14dp"
            android:paddingStart="14dp"
            android:paddingRight="14dp"
            android:paddingEnd="14dp"
            android:paddingBottom="7dp"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="30dp"
                    android:layout_height="30dp">

                    <ImageButton
                        android:id="@+id/btnSlideButton"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:src="@drawable/more_btn_off"
                        android:scaleType="fitXY"
                        android:layout_alignParentBottom="true"
                        android:contentDescription="@null"
                        android:layout_centerVertical="true" />
                </RelativeLayout>

                <EditText
                    android:id="@+id/etWallMessage"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/darker_gray"
                    android:layout_marginLeft="7dp"
                    android:maxLines="4"
                    android:gravity="top|start"
                    android:textSize="14sp"
                    android:hint="@string/chat_wall_message_hint"
                    android:background="@drawable/sent_bubble"
                    android:inputType="textCapSentences|textMultiLine"
                    android:scrollHorizontally="true"
                    android:padding="7dp"
                    android:layout_weight="8" />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center" >

                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/btnWallSend"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:clickable="true"
                        android:background="@color/default_green"
                        android:src="@android:drawable/ic_menu_send" />
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/llTextOptions" >

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rvWallMessages"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:background="@android:color/transparent"
                android:divider="@null"
                android:clipToPadding="false"
                android:dividerHeight="0dp"
                android:overScrollMode="never"
                android:cacheColorHint="@android:color/transparent"
                android:listSelector="@android:color/transparent"
                android:visibility="gone"
                android:transcriptMode="disabled" />

            <ee.app.conversa.view.RegularTextView
                android:id="@+id/tvNoMessages"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="@string/no_wall_messages"
                android:textColor="@color/text_gray" />
        </RelativeLayout>
    </RelativeLayout>

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/default_green"
        android:fitsSystemWindows="true">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize" >
            <include
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                layout="@layout/actionbar_chat" />
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <include layout="@layout/image_view_chat"
        android:id="@+id/rlImageDisplay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>

    <include layout="@layout/push_notification"
        android:id="@+id/rlPushNotification"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />
</android.support.design.widget.CoordinatorLayout>