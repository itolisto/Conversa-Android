<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="#F7F7F7" >

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/ivAvatarChat"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="7dp"
        android:layout_marginEnd="7dp"
        android:layout_centerVertical="true"
        fresco:fadeDuration="300"
        fresco:actualImageScaleType="fitCenter"
        fresco:placeholderImage="@drawable/business_default"
        fresco:placeholderImageScaleType="fitCenter"
        fresco:failureImage="@drawable/business_default"
        fresco:failureImageScaleType="fitCenter"
        fresco:retryImage="@drawable/business_default"
        fresco:retryImageScaleType="fitCenter"
        fresco:progressBarImage="@drawable/rotate_loading"
        fresco:progressBarImageScaleType="centerInside"
        fresco:progressBarAutoRotateInterval="1000"
        fresco:roundAsCircle="true" />

    <ImageButton
        android:id="@+id/ibBack"
        android:scaleType="centerInside"
        android:background="@drawable/ic_arrow_back"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="7dp"
        android:layout_marginLeft="7dp"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="25dp"
        android:layout_centerVertical="true"
        android:layout_width="20dp"
        android:layout_height="20dp"/>

    <LinearLayout
        android:weightSum="3"
        android:orientation="vertical"
        android:layout_toLeftOf="@id/ivAvatarChat"
        android:layout_toStartOf="@id/ivAvatarChat"
        android:layout_toRightOf="@id/ibBack"
        android:layout_toEndOf="@id/ibBack"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ee.app.conversa.view.MediumTextView
            android:id="@+id/tvChatName"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:text="@string/test_string"
            android:ellipsize="end"
            android:maxLines="1" />

        <ee.app.conversa.view.LightTextView
            android:id="@+id/tvChatStatus"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:textColor="@color/default_gray"
            android:textSize="13sp"
            android:text="@string/test_string"
            android:visibility="gone"
            android:maxLines="1" />
    </LinearLayout>

</RelativeLayout>