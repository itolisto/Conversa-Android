<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityChatWall" >
    <!--android.support.design.widget.CoordinatorLayout-->

    <RelativeLayout
        android:layout_gravity="center"
        android:layout_below="@+id/appbar"
        android:layout_marginTop="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white" >
        <!--app:layout_behavior="@string/appbar_scrolling_view_behavior"-->

        <RelativeLayout
            android:id="@+id/swipe"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/myScrollView"
            android:clickable="true" >

            <!--<android.support.v4.widget.SwipeRefreshLayout-->
                <!--android:id="@+id/srlMessages"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content">-->

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/lvWallMessages"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:background="@android:color/transparent"
                    android:divider="@null"
                    android:clipToPadding="false"
                    android:dividerHeight="0dp"
                    android:overScrollMode="never"
                    android:cacheColorHint="@android:color/transparent"
                    android:listSelector="@android:color/transparent"
                    android:stackFromBottom="true"
                    android:visibility="gone"
                    android:transcriptMode="disabled" />
            <!--</android.support.v4.widget.SwipeRefreshLayout>-->

            <ee.app.conversa.view.RegularTextView
                android:id="@+id/tvNoMessages"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="@string/no_wall_messages"
                android:textColor="@color/text_gray"
                android:visibility="visible" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/llMoreActions"
            android:layout_width="160dp"
            android:layout_height="90dp"
            android:orientation="vertical"
            android:layout_alignBottom="@+id/swipe"
            android:layout_alignParentRight="true"
            android:weightSum="1"
            android:background="@drawable/background_repeat"
            android:visibility="gone" >

            <Button
                android:id="@+id/btnBlockUser"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:text="@string/action_block"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_weight="1" />

            <Button
                android:id="@+id/btnProfile"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:text="@string/action_profile"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_weight="1" />

            <Button
                android:id="@+id/btnLocations"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:text="@string/action_location"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_weight="1" />
        </LinearLayout>

        <SlidingDrawer
            android:id="@+id/slDrawer"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:content="@+id/llButtonsLayout"
            android:handle="@+id/handle"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/handle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/llButtonsLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:weightSum="4"
                android:orientation="horizontal"
                style="?android:attr/buttonBarStyle" >

                <ImageButton
                    android:id="@+id/btnCamera"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    android:background="@drawable/more_square_bg"
                    android:src="@drawable/camera_more_icon"
                    style="?android:attr/buttonBarButtonStyle" />

                <ImageButton
                    android:id="@+id/btnGallery"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    android:background="@drawable/more_square_bg"
                    android:src="@drawable/albums_more_icon"
                    style="?android:attr/buttonBarButtonStyle" />

                <ImageButton
                    android:id="@+id/btnLocation"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    android:padding="8dp"
                    android:background="@drawable/more_square_bg"
                    android:src="@drawable/location_more_icon"
                    style="?android:attr/buttonBarButtonStyle" />

                <ImageButton
                    android:id="@+id/btnMore"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    android:padding="8dp"
                    android:background="@drawable/more_square_bg"
                    android:src="@drawable/more_options"
                    style="?android:attr/buttonBarButtonStyle" />
            </LinearLayout>
        </SlidingDrawer>

        <ScrollView
            android:id="@+id/myScrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/chat_bottom_bar"
            android:padding="5dp"
            android:layout_weight="1" >

            <LinearLayout
                android:weightSum="10"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <RelativeLayout
                    android:layout_weight="1"
                    android:id="@+id/rlSlideOptions"
                    android:layout_width="0dp"
                    android:layout_marginRight="5dp"
                    android:layout_height="match_parent" >

                    <ImageButton
                        android:id="@+id/btnSlideButton"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_centerInParent="true"
                        android:background="@null"
                        android:src="@drawable/more_btn_off"
                        android:scaleType="fitXY"
                        android:contentDescription="@null" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:layout_weight="7"
                    android:gravity="center"
                    android:orientation="vertical" >
                    <EditText
                        android:id="@+id/etWallMessage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/white"
                        android:textColor="@android:color/darker_gray"
                        android:maxLines="3"
                        android:gravity="top|left"
                        android:inputType="textMultiLine"
                        android:scrollHorizontally="false"
                        android:padding="5dp" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:background="@color/chat_bottom_bar" >

                    <Button
                        android:id="@+id/btnWallSend"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:text="@string/Send"
                        android:textColor="@color/rounded_rect_send_selector"
                        android:textStyle="bold"
                        android:elevation="1dp"
                        android:background="@null" />
                </RelativeLayout>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/regular_tabs" >
            <!--app:layout_scrollFlags="scroll|enterAlways"-->
            <include
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                layout="@layout/actionbar_chat" />

        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <RelativeLayout
        android:id="@+id/rlChatLocations"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" >

        <include layout="@layout/select_location" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rlImageDisplay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" >

        <include layout="@layout/image_view_chat" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlNoInternetNotification"
        android:layout_below="@id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" >

        <include layout="@layout/no_internet_notification" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlPushNotification"
        android:layout_below="@id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" >

        <include layout="@layout/push_notification" />
    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>