<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentCategory">

    <RelativeLayout
        android:id="@+id/rlSearchCategories"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">
        <ee.app.conversa.view.MediumTextView
            android:id="@+id/tvSearchEmpty"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="@string/no_found"
            android:layout_centerInParent="true"
            android:gravity="center"/>
        <GridView
            android:id="@+id/rvUsersSearch"
            android:numColumns="auto_fit"
            android:gravity="center"
            android:background="@android:color/transparent"
            android:cacheColorHint="@android:color/transparent"
            android:stretchMode="columnWidth"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlCategories"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <android.support.v7.widget.RecyclerView
            android:id="@+id/lvCategories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:cacheColorHint="@android:color/transparent"
            android:divider="@null"
            android:listSelector="@android:color/transparent"
            android:overScrollMode="never" />
    </RelativeLayout>
</RelativeLayout>