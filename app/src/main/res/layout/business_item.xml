<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:paddingTop="3dp"
    android:paddingLeft="6dp"
    android:paddingRight="6dp"
    android:clipToPadding="false" >

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cvBusiness"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        card_view:cardCornerRadius="4dp">

        <LinearLayout
            android:id="@+id/rlCardLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="3"
            android:background="@android:color/holo_blue_dark"
            android:orientation="horizontal" >

            <RelativeLayout
                android:id="@+id/rlCommerceImage"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_centerVertical="true"
                android:layout_weight="2"
                android:gravity="center" >

                <RelativeLayout
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_centerHorizontal="true" >
                    <!--<ee.app.conversa.view.CircleImageView-->
                        <!--xmlns:app="http://schemas.android.com/apk/res-auto"-->
                        <!--android:id="@+id/ivBusinessBackground"-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="match_parent"-->
                        <!--android:layout_centerInParent="true"-->
                        <!--android:contentDescription="@null"-->
                        <!--android:elevation="1dp"-->
                        <!--android:src="@drawable/business_default"-->
                        <!--app:border_color="@android:color/transparent"/>-->
                    <!--<com.parse.ParseImageView-->
                        <!--android:id="@+id/ivBusinessBackground"-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="match_parent"-->
                        <!--android:elevation="1dp"-->
                        <!--android:layout_centerInParent="true"-->
                        <!--android:contentDescription="@null"-->
                        <!--android:visibility="gone" />-->
                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_width="match_parent" >

                <ee.app.conversa.view.MediumTextView
                    android:id="@+id/tvBusiness"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:textColor="#444444"
                    android:textSize="18sp" />

                <LinearLayout
                    android:id="@+id/llBusinessIndicators"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:weightSum="2"
                    android:layout_marginBottom="8dp"
                    android:gravity="bottom|center_horizontal" >

                    <ImageView
                        android:id="@+id/ivFavorite"
                        android:layout_height="25dp"
                        android:layout_width="25dp"
                        android:contentDescription="@null"
                        android:background="@drawable/fav_not"
                        android:layout_weight="1"
                        android:layout_marginRight="17dp"/>
                    <ImageView
                        android:id="@+id/ivStartChat"
                        android:layout_height="25dp"
                        android:layout_width="25dp"
                        android:contentDescription="@null"
                        android:background="@drawable/start_chat"
                        android:layout_weight="1"
                        android:layout_marginRight="10dp"/>
                </LinearLayout>

                <ee.app.conversa.view.LightTextView
                    android:id="@+id/tvBusinessAbout"
                    android:layout_marginTop="7dp"
                    android:paddingRight="3dp"
                    android:maxLines = "2"
                    android:layout_below="@id/tvBusiness"
                    android:layout_toLeftOf="@id/llBusinessIndicators"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#444444"
                    android:textSize="14sp" />
            </RelativeLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>